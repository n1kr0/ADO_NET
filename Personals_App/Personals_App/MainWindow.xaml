<Window x:Class="Personals_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Personals_App"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="244*"/>
            <RowDefinition Height="135*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="103*"/>
            <ColumnDefinition Width="466*"/>
            <ColumnDefinition Width="223*"/>
        </Grid.ColumnDefinitions>
        <DataGrid Name="dgUsers" Grid.Column="1" Grid.Row="1" AutoGenerateColumns="False" Loaded="dgUsers_Loaded"  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path=Id}" Header="Id"/>
                <DataGridTextColumn Binding="{Binding Path=FirstName}" Header="Ім'я"/>
                <DataGridTextColumn Binding="{Binding Path=LastName}" Header="Прізвище"/>
                <DataGridTextColumn Binding="{Binding Path=Age}" Header="Вік"/>
                <DataGridTemplateColumn Header="Фото">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Source="{Binding Path =Image}" Width="100" Height="100"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>

                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid  >
        <Button 
            Grid.Column="2" 
            Grid.Row="1" 
            Content="Добавити користувача"  
            Margin="5 0 5 0" 
            Height="50" 
            Name="btnAddUser"
            Click="Add_Click"
            VerticalAlignment="Top" />
    </Grid>
</Window>
